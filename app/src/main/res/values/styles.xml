<resources>
	<!--Base Theme-->
	<style name="AppTheme.Base" parent="Theme.AppCompat.Light">
		<!--no actionbar and title-->
		<item name="windowActionBar">false</item>
		<!--无标题-->
		<item name="windowNoTitle">true</item>
		<!--action bar color-->
		<item name="colorPrimary">@color/primary</item>
		<!--status bar color-->
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<!--window background-->
		<item name="android:windowBackground">@color/comment_bg</item>
	</style>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="AppTheme.Base">
		<!--ActionBar的样式-->
		<item name="actionBarStyle">@style/JDactionBarStyle</item>
		<item name="drawerArrowStyle">@style/AppTheme.JDDrawerArrowStyle</item>

		<!--actionbar text color-->



	</style>

	<!--设置标题栏的样式-->
	<style name="JDactionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
		<item name="titleTextStyle">@style/ActionBarTitleStyle</item>
	</style>
	<!--标题栏文字的样式-->
	<style name="ActionBarTitleStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/actionbar_title</item>
	</style>

	<style name="AppTheme.JDDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<!--是否开启导航图标的旋转效果-->
		<item name="spinBars">false</item>
		<item name="color">@android:color/white</item>
	</style>


</resources>
